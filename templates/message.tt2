[% INCLUDE header.tt2 title = message.subject base = "../../.." %]

<h1>[% message.subject | html %]</h1>

<p>
[<a href="[% message.last.filename %]">last</a>]
[<a href="[% message.next.filename %]">next</a>]
</p>

<div class=headers>
<b>From:</b> [% message.from %]
[% FOREACH hdr = headers %]
<br><b>[% hdr %]:</b> [% message.header(hdr) | html %]
[% END %]
</div>

<pre>[% message.body | html %]</pre>

[% INCLUDE prevnext.tt2 %]

[% PROCESS bottomthread.tt2 %]

</body>
</html>
